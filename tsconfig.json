{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "globals.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/stories/**/*",
    "src/tests/**/*",
    "src/mocks/**/*",
    ".storybook",
  ]
}